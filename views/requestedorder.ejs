<%- include('portals/header') %>
<%- include('portals/adminmenu') %>


<div class="bg-danger shadow rounded p-5" id="sel">
    <div class="bg-dark text-center col-10 p-2 m-auto">
        <h1 class="text-bolder text-center text-light p-4 ">Recive orders</h1>
        <% if (resiveitem.length === 0) { %>
            <h4 class="text-bolder text-center text-light p-4 ">Order not requested</h4>
        <% } else { %>
            <% for (let i=0; i < resiveitem.length; i++) { %>
                <div class="my-2 bg-danger">
                    <h3 class="col-7 d-inline-block text-light"><%= resiveitem[i].name %></h3>
                    <a class=" col-4 text-dark text-decoration-none bg-info shadow rounded py-1 px-3" href="/viewreciveorder/<%= resiveitem[i]._id %>">View order</a>
                </div>
            <% } %>
        <% } %>
        
    </div>
</div>


<%- include('portals/footer') %>
