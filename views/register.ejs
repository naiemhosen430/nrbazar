<%- include('portals/header') %>


<div class="rounded col-6 shadow m-auto my-5 p-5">
    <h1 class="p-4 text-center pt-0">Create your account</h1>
    <form class="px-5" action="/register" method="post">
        <div class="my-2">
            <label class="d-block w-100 fs-4 py-1" for="name">Write your full name</label>
            <input class="d-block w-100 px-3 fs-5 py-1" type="text" name="name" id="name" placeholder="Write name....">
        </div>
        <div class="my-2">
            <label class="d-block w-100 fs-4 py-1" for="phone">Write your phone number</label>
            <input class="d-block w-100 px-3 fs-5 py-1" type="text" name="phone" id="phone" placeholder="Write phone number....">
        </div class="my-2">
        <div>
            <label class="d-block w-100 fs-4 py-1" for="email">Write your email</label>
            <input class="d-block w-100 px-3 fs-5 py-1" type="email" name="email" id="email" placeholder="Write email....">
        </div>
        <div class="my-2">
            <label class="d-block w-100 fs-4 py-1" for="password">Write password</label>
            <input class="d-block w-100 px-3 fs-5 py-1" type="password" name="password" id="password" placeholder="Write password....">
        </div>
        <button class="my-4 bg-dark text-light text-bolder py-1 px-4 rounded d-block m-auto">Register</button>
        <span class="d-block text-center">Already have an account? <a href="/login">log in now</a></span>
    </form>
</div>